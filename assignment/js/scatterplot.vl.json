{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "2020 Global Happiness Score and Life Expectancy",
  "data": {
    "url": "https://raw.githubusercontent.com/brendanyeo5/FIT3179/main/assignment/data/2020.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Central and Eastern Europe",
          "Western Europe",
          "Commonwealth of Independent States",
          "Middle East and North Africa",
          "Sub-Saharan Africa",
          "East Asia",
          "South Asia",
          "Southeast Asia",
          "Latin America and Caribbean",
          "North America and ANZ"
        ],
        "labels": [
          "Show All",
          "Central and Eastern Europe",
          "Western Europe",
          "Commonwealth of Independent States",
          "Middle East and North Africa",
          "Sub-Saharan Africa",
          "East Asia",
          "South Asia",
          "Southeast Asia",
          "Latin America and Caribbean",
          "North America and ANZ"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Ladder > 0"},
    {"filter": "datum.LifeExpectancy > 0"},
    {"filter": "Region_selection == null || datum.Region == Region_selection"}
  ],
  "encoding": {
    "x": {
      "field": "Ladder",
      "type": "quantitative",
      "title": "World Happiness Score",
      "axis": {"tickCount": 10},
      "scale": {"domain": [0, 10]}
    },
    "y": {
      "field": "LifeExpectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "axis": {"tickCount": 8},
      "scale": {"domain": [0, 80]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": {
        "type": "circle",
        "size": 45,
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Region",
          "type": "nominal",
          "legend": {
            "legendX": 490,
            "legendY": 310,
            "orient": "none",
            "labelFontSize": 15,
            "labelLimit": 300,
            "titleFontSize": 20,
            "symbolStrokeWidth": 1
          },
          "scale": {
            "domain": [
              "Central and Eastern Europe",
              "Western Europe",
              "Commonwealth of Independent States",
              "Middle East and North Africa",
              "Sub-Saharan Africa",
              "East Asia",
              "South Asia",
              "Southeast Asia",
              "Latin America and Caribbean",
              "North America and ANZ"
            ],
            "range": [
              "#0acbee",
              "#1f78b4",
              "#fb9a99",
              "#b2df8a",
              "#33a02c",
              "#fec44f",
              "#ff7f00",
              "#e31a1c",
              "#cab2d6",
              "#6a3d9a"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.9},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "Ladder",
            "type": "quantitative",
            "format": ".2f",
            "title": "Score"
          },
          {
            "field": "LifeExpectancy",
            "type": "quantitative",
            "format": ".2f",
            "title": "Life Expectancy"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Afghanistan' || datum['Country'] == 'Singapore' || datum['Country'] == 'India' || datum['Country'] == 'South Sudan' || datum['Country'] == 'Australia' || datum['Country'] == 'Central African Republic' || datum['Country'] == 'Hong Kong S.A.R. of China' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "Ladder",
            "type": "quantitative",
            "format": ".2f",
            "title": "Score"
          },
          {
            "field": "LifeExpectancy",
            "type": "quantitative",
            "format": ".2f",
            "title": "Life Expectancy"
          }
        ]
      }
    }
  ],
  "config": {}
}
